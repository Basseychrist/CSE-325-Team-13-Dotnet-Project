<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SmartBudget</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill me-2" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3 mt-3 mb-2">
                    <span class="text-white-50 small d-block">Logged in as:</span>
                    <span class="text-white fw-bold d-block text-truncate">@context.User.Identity?.Name</span>
                </div>
                <hr class="text-white-50 mx-3 my-2" />

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/expenses">
                        <span class="bi bi-plus-square-fill me-2" aria-hidden="true"></span> Expenses
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="categories">
                        <span class="bi bi-tags-fill me-2" aria-hidden="true"></span> Categories
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="budgets">
                        <span class="bi bi-wallet2 me-2" aria-hidden="true"></span> Budgets
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="spending-summary">
                        <span class="bi bi-bar-chart me-2" aria-hidden="true"></span> Spending Summary
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="" />
                        <button type="submit" class="nav-link" style="color: #ff6b6b;">
                            <span class="bi bi-arrow-bar-left me-2" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>

            <NotAuthorized>
                <hr class="text-white-50 mx-3 my-2" />
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-plus" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-person-badge" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>